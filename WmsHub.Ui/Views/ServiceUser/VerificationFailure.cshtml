@{
    ViewData["Title"] = "Error: Date of Birth Verification Failed";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}


<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div class="nhsuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1">
            <h1 class="nhsuk-error-summary__title" id="error-summary-title">
                Verification failed
            </h1>
            <div class="nhsuk-error-summary__body">
                <p>
                  Unfortunately, you have entered your Date of Birth incorrectly 3 times, we will 
                  attempt to contact you again via text or telephone call to provide you with a 
                  further opportunity to confirm your details correctly.
                </p>
                <ul class="nhsuk-list nhsuk-error-summary__list">
                </ul>
            </div>
        </div>
    </div>
</div>