@model ServiceUserModel
@{
    ViewData["Title"] = "Service Choice Confirmed";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}


<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div class="nhsuk-card wms-card">
            <div class="nhsuk-card__content">
                <div class="nhsuk-grid-row">
                    <div class="nhsuk-grid-column-full">
                        @if (Model.HasEmailAddress)
                        {
                            <h1>You have now chosen @Model.SelectedProvider.Name as your provider.</h1>
                            <p>
                              There is nothing else for you to do at this stage. 
                              @Model.SelectedProvider.Name will be in contact shortly to let you know what happens next. 
                              You can now safely close this window.
                            </p>
                        }
                        else
                        {
                            <h1>You have not provided your email address.</h1>
                            @if (Model.HasGpReferralSource)
                            {
                              <p>Your referral has been cancelled and your GP practice will be notified.</p>
                            }
                            else
                            {
                              <p>Your referral has been cancelled.</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

