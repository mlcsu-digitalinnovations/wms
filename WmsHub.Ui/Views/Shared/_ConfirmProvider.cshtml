<input type="hidden" id="selectedProvider" name="selectedProvider" />
<div id="wms-provider-button" role="button">
  <div class="wms-provider-button_content">
    <button class="nhsuk-button"
      type="button"
      onclick="getConfirmationMessage()"
      id="confirmProvider">
      Confirm Provider
    </button>
  </div>
</div>

<div role="dialog"
  id="wms-provider-dialog"
  aria-labelledby="wms-provider-dialog_label"
  aria-modal="true"
  class="hidden">
  <div class="nhsuk-card wms-card">
    <div class="nhsuk-card__content">
      <div class="dialog-header">
        <h2 id="wms-provider-dialog_label" class="nhsuk-heading-l nhsblue">
          Confirmation Required
        </h2>
      </div>
      <div class="dialog-content">
        <p id="displayMessage"></p>
      </div>
      <button class="nhsuk-button nhsuk-button--secondary"
        type="button" onclick="closeDialog(this)">
        Cancel
      </button>
      <button
        type="submit"
        asp-action="ConfirmProvider"
        value="Confirm"
        name="confirm-delay"
        class="nhsuk-button">
        Confirm
      </button>
    </div>
  </div>
</div>

<script type="text/javascript">
  function getConfirmationMessage() {
    $('#displayMessage').text('Confirm provider ' + $('#selectedProvider').val() + ' ?');
    openDialog('wms-provider-dialog', this);
  }
</script>
