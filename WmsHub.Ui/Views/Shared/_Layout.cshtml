@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    string siteName = "Digital Weight Management Programme Referral Hub";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NHS @siteName</title>
    <link rel="stylesheet" href="~/css/wms-main.min.css" />
    <link rel="shortcut icon" href="/lib/nhsuk-frontend-library/assets/favicons/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="/lib/nhsuk-frontend-library/assets/favicons/apple-touch-icon-180x180.png">
    <link rel="mask-icon" href="/lib/nhsuk-frontend-library/assets/favicons/favicon.svg" color="#005eb8">
    <link rel="icon" sizes="192x192" href="/lib/nhsuk-frontend-library/assets/favicons/favicon-192x192.png">
    <meta name="msapplication-TileImage" content="/lib/nhsuk-frontend-library/assets/favicons/mediumtile-144x144.png">
    <meta name="msapplication-TileColor" content="#005eb8">
    <meta name="msapplication-square70x70logo" content="/lib/nhsuk-frontend-library/assets/favicons/smalltile-70x70.png">
    <meta name="msapplication-square150x150logo" content="/lib/nhsuk-frontend-library/assets/favicons/mediumtile-150x150.png">
    <meta name="msapplication-wide310x150logo" content="/lib/nhsuk-frontend-library/assets/favicons/widetile-310x150.png">
    <meta name="msapplication-square310x310logo" content="/lib/nhsuk-frontend-library/assets/favicons/largetile-310x310.png">
    <meta name="theme-color" content="#005EB8">
</head>
<body class="rmc-section">
    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>

    @*HEADER*@
    <a class="nhsuk-skip-link" href="#maincontent">Skip to main content</a>
    <header class="nhsuk-header nhsuk-header--transactional" role="banner">
        <div class="nhsuk-width-container-fluid nhsuk-header__container">
            <div class="nhsuk-header__logo nhsuk-header__logo--only">
                <a class="nhsuk-header__link" asp-area="" asp-controller="Rmc" asp-action="Index" aria-label="NHS @siteName">
                    <svg class="nhsuk-logo" xmlns="http://www.w3.org/2000/svg" role="presentation" focusable="false" viewBox="0 0 40 16">
                        <path class="nhsuk-logo__background" d="M0 0h40v16H0z"></path>
                        <path class="nhsuk-logo__text" d="M3.9 1.5h4.4l2.6 9h.1l1.8-9h3.3l-2.8 13H9l-2.7-9h-.1l-1.8 9H1.1M17.3 1.5h3.6l-1 4.9h4L25 1.5h3.5l-2.7 13h-3.5l1.1-5.6h-4.1l-1.2 5.6h-3.4M37.7 4.4c-.7-.3-1.6-.6-2.9-.6-1.4 0-2.5.2-2.5 1.3 0 1.8 5.1 1.2 5.1 5.1 0 3.6-3.3 4.5-6.4 4.5-1.3 0-2.9-.3-4-.7l.8-2.7c.7.4 2.1.7 3.2.7s2.8-.2 2.8-1.5c0-2.1-5.1-1.3-5.1-5 0-3.4 2.9-4.4 5.8-4.4 1.6 0 3.1.2 4 .6"></path>
                        <image src="https://assets.nhs.uk/images/nhs-logo.png" xlink:href=""></image>
                    </svg>
                </a>
            </div>

            <div class="nhsuk-header__content" id="content-header">
                <div class="nhsuk-header__menu">
                    <button class="nhsuk-header__menu-toggle" id="toggle-menu" aria-controls="header-navigation" aria-label="Open menu">Menu</button>
                </div>
            </div>
            <div class="nhsuk-header__transactional-service-name nhsuk-header__transactional-service-name--long">
                <a class="nhsuk-header__transactional-service-name--link"  asp-area="" asp-controller="Rmc" asp-action="Index">@siteName</a>
            </div>
        </div>
        @* Navigation *@
        <nav class="nhsuk-header__navigation" id="header-navigation" role="navigation" aria-label="Primary navigation" aria-labelledby="label-navigation">
            <div class="nhsuk-width-container-fluid">
                <p class="nhsuk-header__navigation-title">
                    <span id="label-navigation">Menu</span>
                    <button class="nhsuk-header__navigation-close" id="close-menu">
                        <svg class="nhsuk-icon nhsuk-icon__close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                            <path d="M13.41 12l5.3-5.29a1 1 0 1 0-1.42-1.42L12 10.59l-5.29-5.3a1 1 0 0 0-1.42 1.42l5.3 5.29-5.3 5.29a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0l5.29-5.3 5.29 5.3a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42z"></path>
                        </svg>
                        <span class="nhsuk-u-visually-hidden">Close menu</span>
                    </button>
                </p>
                <ul class="nhsuk-header__navigation-list">
                  <li class="nhsuk-header__navigation-item nhsuk-header__navigation-item--for-mobile">
                    <a class="nhsuk-header__navigation-link" asp-area="" asp-controller="Rmc" asp-action="Index">
                      Home
                      <svg class="nhsuk-icon nhsuk-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z"></path>
                      </svg>
                    </a>
                  </li>
                  <li class="nhsuk-header__navigation-item">
                    <a class="nhsuk-header__navigation-link" asp-area="" asp-controller="Rmc" asp-action="ReferralList">
                      <span class="nhsuk-u-visually-hidden">View</span> RMC Call
                      <svg class="nhsuk-icon nhsuk-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z"></path>
                      </svg>
                    </a>
                  </li>
                  <li class="nhsuk-header__navigation-item">
                    <a class="nhsuk-header__navigation-link" asp-area="" asp-controller="Rmc" asp-action="PreviouslyDelayedList">
                      <span class="nhsuk-u-visually-hidden">View</span> RMC Delayed
                      <svg class="nhsuk-icon nhsuk-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z"></path>
                      </svg>
                    </a>
                  </li>
                  <li class="nhsuk-header__navigation-item">
                    <a class="nhsuk-header__navigation-link" asp-area="" asp-controller="Rmc" asp-action="VulnerableList">
                      <span class="nhsuk-u-visually-hidden">View</span> Vulnerable List
                      <svg class="nhsuk-icon nhsuk-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z"></path>
                      </svg>
                    </a>
                  </li>
                  <li class="nhsuk-header__navigation-item">
                    <a class="nhsuk-header__navigation-link" asp-area="" asp-controller="Rmc" asp-action="ExceptionList">
                      <span class="nhsuk-u-visually-hidden">View</span> Exception List
                      <svg class="nhsuk-icon nhsuk-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z"></path>
                      </svg>
                    </a>
                  </li>
                  <li class="nhsuk-header__navigation-item">
                    <a class="nhsuk-header__navigation-link" asp-area="" asp-controller="Rmc" asp-action="RejectionList">
                      <span class="nhsuk-u-visually-hidden">View</span> Rejection List
                      <svg class="nhsuk-icon nhsuk-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z"></path>
                      </svg>
                    </a>
                  </li>
                  <li class="nhsuk-header__navigation-item">
                    <a class="nhsuk-header__navigation-link" asp-area="" asp-controller="Rmc" asp-action="ProviderInfo">
                      <span class="nhsuk-u-visually-hidden">View</span> Provider Status
                      <svg class="nhsuk-icon nhsuk-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z"></path>
                      </svg>
                    </a>
                  </li>
                  <li class="nhsuk-header__navigation-item">
                    <partial name="_LoginPartial" />
                  </li>
                </ul>
            </div>
        </nav>
    </header>

    @*MAIN*@
    <div class="nhsuk-width-container-fluid">
        <main class="nhsuk-main-wrapper app-main-wrapper" id="maincontent" role="main">
            @RenderBody()
        </main>
    </div>

    @*FOOTER*@
    <footer role="contentinfo">
        <div class="nhsuk-footer" id="nhsuk-footer">
            <div class="nhsuk-width-container">
                <h2 class="nhsuk-u-visually-hidden">Support links</h2>
                <ul class="nhsuk-footer__list">
                    <li class="nhsuk-footer__list-item"><a class="nhsuk-footer__list-item-link" asp-controller="Home" asp-action="AccessibilityPolicy">Accessibility statement</a></li>
                    <li class="nhsuk-footer__list-item"><a class="nhsuk-footer__list-item-link" asp-controller="Home" asp-action="ContactUs">Contact us</a></li>
                    <li class="nhsuk-footer__list-item"><a class="nhsuk-footer__list-item-link" asp-controller="Home" asp-action="CookiesPolicy">Cookies</a></li>
                    <li class="nhsuk-footer__list-item"><a class="nhsuk-footer__list-item-link" asp-controller="Home" asp-action="PrivacyPolicy">Privacy policy</a></li>
                    <li class="nhsuk-footer__list-item"><a class="nhsuk-footer__list-item-link" asp-controller="Home" asp-action="TermsAndConditions">Terms and conditions</a></li>
                </ul>
                <p class="nhsuk-footer__copyright">&copy; Crown copyright</p>
            </div>
        </div>
    </footer>

    @*SCRIPTS*@
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="~/lib/nhsuk-frontend-library/nhsuk-4.0.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    window._signalRUrl = @Json.Serialize(@Configuration.GetSection("SignalR_Endpoint").Value)
</script>