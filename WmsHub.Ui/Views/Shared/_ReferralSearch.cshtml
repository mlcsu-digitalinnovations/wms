@model ReferralSearchModel

<div class="nhsuk-grid-row">
    <div class="nhsuk-form-group nhsuk-grid-column-one-quarter">
        <label class="nhsuk-label" asp-for="Ubrn">UBRN</label>
        <input class="nhsuk-input" asp-for="Ubrn" />
    </div>
    <div class="nhsuk-form-group nhsuk-grid-column-one-quarter">
        <label class="nhsuk-label" asp-for="FamilyName">Family Name</label>
        <input class="nhsuk-input" asp-for="FamilyName" />
    </div>
    <div class="nhsuk-form-group nhsuk-grid-column-one-quarter">
        <label class="nhsuk-label" asp-for="TelephoneNumber">Telephone</label>
        <input class="nhsuk-input" asp-for="TelephoneNumber" />
    </div>
    <div class="nhsuk-form-group nhsuk-grid-column-one-quarter">
        <label class="nhsuk-label" asp-for="Postcode">Postcode</label>
        <input class="nhsuk-input" asp-for="Postcode" />
    </div>
</div>
<div class="nhsuk-grid-row">
    <div class="nhsuk-form-group nhsuk-grid-column-one-quarter">
        <label class="nhsuk-label" asp-for="NhsNumber">NHS No:</label>
        <input class="nhsuk-input" asp-for="NhsNumber" />
    </div>
    <div class="nhsuk-form-group nhsuk-grid-column-one-quarter">
        <label class="nhsuk-label" asp-for="GivenName">Given Name</label>
        <input class="nhsuk-input" asp-for="GivenName" />
    </div>
    <div class="nhsuk-form-group nhsuk-grid-column-one-quarter">
        <label class="nhsuk-label" asp-for="MobileNumber">Mobile</label>
        <input class="nhsuk-input" asp-for="MobileNumber" />
    </div>
    <div class="nhsuk-form-group nhsuk-grid-column-one-quarter">
        <label class="nhsuk-label" asp-for="EmailAddress">Email</label>
        <input class="nhsuk-input" asp-for="EmailAddress" />
    </div>
</div>
<!-- hidden field to control number of displayed referrals -->
<input type="hidden" asp-for="Limit" />